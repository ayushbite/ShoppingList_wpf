<Window x:Class="ShoppingProject.SaleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShoppingProject"
        mc:Ignorable="d"
        Title="SaleWindow" Height="450" Width="400">
    <Grid>
        <StackPanel>

            <StackPanel Orientation="Horizontal" Margin="10 10 10 10">
                <Label>customer Id :</Label>
                <TextBox x:Name="customeridbox" Width="50"></TextBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="10 10 10 10">
                <Label>Product Id :</Label>
                <TextBox x:Name="productidbox" Width="50"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="10 10 10 10">
                <Label>quantity :</Label>
                <TextBox x:Name="quantitybox" Width="50"></TextBox>
            </StackPanel>
            <StackPanel Width="300">
                <Button Click="sale_completed">SALE</Button>
            </StackPanel>

        </StackPanel>
    </Grid>
</Window>
